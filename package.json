{
  "name": "pure-escapes-fe",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "dashboard": "webpack-dashboard -- npm run dev",
    "dev": "webpack-dev-server --mode development --inline --progress",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .jsx --ext .js src/",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "prettier": "prettier 'src/**/*.{js,jsx,css,scss}' --write --single-quote=true --print-width=120 --trailing-comma=es5"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-knobs": "^4.1.13",
    "@storybook/react": "^4.1.12",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "canvas": "^2.3.1",
    "css-loader": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.1.0",
    "jest-canvas-mock": "^2.0.0-alpha.3",
    "markdown-loader": "^5.0.0",
    "prop-types": "^15.7.2",
    "raw-loader": "^1.0.0",
    "react-test-renderer": "^16.8.3",
    "storybook": "^1.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dashboard": "^3.0.0",
    "webpack-dev-server": "^3.2.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "date-fns": "^1.30.1",
    "downshift": "^3.2.2",
    "formik": "^1.5.1",
    "lunr": "^2.3.6",
    "markdown-it": "^8.4.2",
    "object-hash": "^1.3.1",
    "prettier": "^1.16.4",
    "ramda": "^0.26.1",
    "react": "^16.8.2",
    "react-admin": "^2.7.1",
    "react-art": "^16.8.2",
    "react-big-calendar": "^0.20.3",
    "react-chartkick": "^0.3.0",
    "react-day-picker": "^7.3.0",
    "react-dom": "^16.8.2",
    "react-helmet": "^5.2.0",
    "react-redux": "^6.0.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-table": "^6.9.2",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "^4.1.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/src/**/*stories.{js,jsx}",
      "!**/src/**/*props.{js,jsx}",
      "!**/src/{apps,components,containers,config,effects,hoc,layouts,pages,utils}/**/*index.{js,jsx}",
      "!**/src/index.{js,jsx}"
    ],
    "coverageDirectory": "<rootDir>/tests/coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFilesAfterEnv": [
      "jest-canvas-mock",
      "<rootDir>/tests/setupFramework.js"
    ],
    "modulePaths": [
      "src"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(md|svg|png|jpg|jpeg|mp4|ogg)$": "<rootDir>/tests/__mocks__/pathMock.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
